        android:theme="@style/Base.Theme.SugarBashProgressApp"
        tools:targetApi="31">
        <activity
            android:screenOrientation="portrait"
            android:name=".map.activity.MapEditActivity"
            android:exported="false" />
        <activity
            android:name=".project.activity.AssignProjectActivity"
